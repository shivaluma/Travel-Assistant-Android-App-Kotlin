<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/alone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tours"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary" />

<!--        <SearchView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:iconifiedByDefault="true"-->
<!--            android:layout_alignParentEnd="true" />-->
    </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/tourIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tour" />
                <TextView
                    android:id="@+id/tourNumber"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="3dp"
                    android:layout_width="wrap_content"
                    android:layout_toEndOf="@id/tourIcon"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginStart="3dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/tourNumber"
                    android:textSize="16sp"
                    android:text=" tours"/>


        </RelativeLayout>

        

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/tvText"
            android:background="@color/colorAccent"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/tourListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="beforeDescendants"
                android:layout_marginBottom="56dp"
                android:divider="@null"
                android:dividerHeight="2dp"
                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingaddnew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_circle_black_24dp"
                android:layout_marginBottom="60dp"
                android:layout_gravity="bottom|end"
                android:clickable="true"
                />
        </FrameLayout>


</LinearLayout>



