<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"

    android:elevation="3dp"
    app:cardCornerRadius="20dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"

            android:layout_marginBottom="-20dp"
            app:cardElevation="0dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/imageborder"


                android:scaleType="centerCrop"
                android:src="@drawable/demoimage" />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:background="@color/white"
            android:padding="8dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/locationicon"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:id="@+id/titleItem"
                    android:layout_toRightOf="@id/locationIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="6dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="Ho Chi Minh - Ha Noi"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="gravity">
                <ImageView
                    android:id="@+id/calendarIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_icons8_flat_calendar"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:id="@+id/dateItem"
                    android:layout_toRightOf="@id/calendarIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"

                    android:singleLine="true"
                    android:layout_centerVertical="true"

                    android:text="11/11/2019 - 12/12/2019"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAlignment="gravity">
                <ImageView
                    android:id="@+id/peopleIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_people_black_24dp"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:id="@+id/peopleItem"
                    android:layout_toRightOf="@id/peopleIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="2 adults"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textAlignment="gravity">
                <ImageView
                    android:id="@+id/costIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_monetization_on_black_24dp"
                    android:layout_alignParentStart="true"
                    />
                <TextView
                    android:id="@+id/costItem"
                    android:layout_toRightOf="@id/costIcon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:singleLine="true"
                    android:layout_centerVertical="true"
                    android:text="500.000 - 1.000.000"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />
            </RelativeLayout>

            </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_closed_big"
                    android:id="@+id/tourStatusImage"
                    android:layout_gravity="bottom"/>

            </LinearLayout>






        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>
