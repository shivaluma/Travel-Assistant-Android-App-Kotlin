<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/imageborder"
    android:layout_margin="4dp"
    android:padding="4dp"
    android:layout_marginBottom="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:id="@+id/reviewerAvatar"
            android:src="@drawable/demoimage"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Shiro"
            android:id="@+id/reviewerName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_report"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btnReport"
            android:background="@null"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        >

        <RatingBar
            android:id="@+id/reviewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:max="5"
            android:rating="4"
            android:layout_gravity="center_vertical"
            android:layout_centerHorizontal="true"
            android:progressTint="@color/colorPrimary"
            android:progressBackgroundTint="@color/lightgray"
            android:stepSize="0.5"
            android:isIndicator="true" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/reviewDate"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:textStyle="bold"
            android:text="11/12/2019"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviewContent"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis orci lacus, dapibus vitae fermentum et, ultrices et mi. Aenean varius erat id aliquet tristique. Curabitur diam tortor, mollis eu elementum a, bibendum vitae lorem. In vitae erat consequat, pulvinar libero ac, aliquet neque. Morbi sit amet molestie massa, ut varius ipsum. Aliquam aliquet pulvinar dolor. Praesent quam nisi, sagittis ac ante et, mollis tincidunt sapien. Vivamus vel bibendum libero, et vehicula risus."/>





</LinearLayout>